<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content_bg"
    android:orientation="vertical">


    <include layout="@layout/action_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_21"
                android:layout_marginTop="@dimen/widget_size_16"
                android:text="预约号"
                android:textColor="@color/disable_text"
                android:textSize="@dimen/font_size_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_300"
                android:layout_marginLeft="@dimen/widget_size_16"
                android:layout_marginTop="@dimen/widget_size_8"
                android:layout_marginRight="@dimen/widget_size_16"
                android:background="@drawable/shape_input_edit"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="这是已经填写好的转交说明，三百字以内。这是已经填写好的转交说明，三百字以内。这是已经填写好的转交说明，三百字以内。这是已经填写好的转交说明，三百字以内。"
                    android:lineSpacingExtra="@dimen/widget_size_4"
                    android:maxLength="300"
                    android:padding="@dimen/widget_size_8"
                    android:text=""
                    android:textColor="@color/text_title_narmal"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/edit_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:layout_marginBottom="@dimen/widget_size_10"
                    android:text="0/300" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_18"
                android:layout_marginTop="@dimen/widget_size_10"
                android:text="如无法按要求服务，可说明原因并转交客服处理。"
                android:textColor="@color/disable_text"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_min_size_2"
                android:layout_gravity="bottom"
                android:background="@color/splite_line" />

                <RelativeLayout
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/widget_size_50"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_button">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/widget_size_4"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="确认转交"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_18"
                        android:visibility="visible" />
                </RelativeLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>