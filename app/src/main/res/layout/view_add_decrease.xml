<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/widget_size_24"
        android:layout_height="@dimen/widget_size_24"
        android:background="@mipmap/btn_subtractfigure" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_16"
        android:layout_marginRight="@dimen/widget_size_16"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="@dimen/widget_size_24"
        android:layout_height="@dimen/widget_size_24"
        android:background="@mipmap/btn_addfigure" />
</LinearLayout>